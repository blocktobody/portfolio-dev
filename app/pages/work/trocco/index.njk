{# Main content #}
{% block content %}

<section id="trocco" class="work-detail">
  <div class="work-detail__container container">
    <div class="work-detail__txtarea">
      <h3 class="work-detail__ttl bold-ttl">trocco</h3>
      <div class="work-detail__ttlimg animate-fade-up">
        <img src="/assets/img/work/ttl-trocco-pc.svg" alt="trocco" class="pc-only">
        <img src="/assets/img/work/ttl-trocco-sp.svg" alt="trocco" class="sp-only">
      </div>
      <a href="https://trocco.io/lp/index.html" target="_blank" class="work-detail__link animate-fade-up">visit website</a>
      <div class="work-detail__imgarea animate-fade-left sp-only">
